{
	"compilerOptions": {
		"declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "./dist",
		"lib": ["dom", "es2020"],
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2017",
		"skipLibCheck": true,
		"declarationDir": "./dist/types"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
