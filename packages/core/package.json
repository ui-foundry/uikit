{
	"name": "@uifoundry/uikit",
	"version": "1.0.0",
	"description": "A design system for everyone",
	"repository": {
		"type": "git",
		"url": "https://github.com/ui-foundry/uikit.git",
		"directory": "packages/core"
	},
	"main": "dist/index.cjs.js",
	"module": "dist/index.js",
	"es2015": "dist/esm/index.mjs",
	"es2017": "dist/esm/index.mjs",
	"types": "dist/types/index.d.ts",
	"collection": "dist/collection/collection-manifest.json",
	"collection:main": "dist/collection/index.js",
	"unpkg": "dist/uikit/uikit.esm.js",
	"files": [
		"dist/",
		"loader/",
		"react/",
		"uikit.css"
	],
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs.js",
			"types": "./dist/types/index.d.ts"
		},
		"./loader": {
			"types": "./loader/index.d.ts",
			"import": "./loader/index.js",
			"require": "./loader/index.cjs.js"
		},
		"./react": {
			"types": "./react/dist/types/index.d.ts",
			"import": "./react/dist/esm/index.js",
			"require": "./react/dist/cjs/index.js"
		},
		"./core.css": {
			"import": "./uikit.css",
			"require": "./uikit.css"
		}
	},
	"scripts": {
		"start": "stencil build --watch",
		"build": "stencil build && cpy --flat ./dist/uikit/uikit.css ./",
		"prebuild": "mkdirp react && cd > uikit.css",
		"publish": "pnpm publish --no-git-checks",
		"publish-beta": "pnpm publish --tag beta --no-git-checks"
	},
	"devDependencies": {
		"@stencil-community/postcss": "^2.2.0",
		"@stencil/react-output-target": "^1.2.0",
		"@stencil/sass": "^3.2.2",
		"@types/postcss-pxtorem": "^6.1.0",
		"cpy-cli": "^5.0.0",
		"autoprefixer": "^10.4.21",
		"postcss-pxtorem": "^6.1.0"
	}
}
