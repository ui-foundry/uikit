{
	"name": "@uifoundry/uikit-react",
	"description": "React wrapper components for @uifoundry/uikit-react",
	"version": "1.0.0-beta.2",
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"types": "dist/types/index.d.ts",
	"files": [
		"dist/"
	],
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "pnpm run compile && pnpm run copy",
		"compile": "pnpm run build:cjs && pnpm run build:esm",
		"build:cjs": "tsc --module commonjs --outDir ../core/react/dist/cjs --declarationDir ../core/react/dist/types",
		"build:esm": "tsc --module es6 --outDir ../core/react/dist/esm --declarationDir ../core/react/dist/types",
		"copy": "cpy --flat ./package.json ../core/react"
	},
	"engines": {
		"node": ">=20"
	},
	"devDependencies": {
		"@types/react": "^19.1.8",
		"cpy-cli": "^5.0.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"typescript": "5.8.3"
	},
	"dependencies": {
		"@stencil/react-output-target": "^1.2.0"
	},
	"peerDependencies": {
		"@uifoundry/uikit": "workspace:*"
	}
}
