{
	"name": "uikit-workspace",
	"version": "1.0.0",
	"description": "A design system for everyone",
	"scripts": {
		"dev:docs": "pnpm ---filter docs dev",
		"prepare": "husky",
		"format": "prettier --write . --cache",
		"clean": "run-s clean:*",
		"clean:build": "rimraf .stencil dist",
		"clean:modules": "rimraf ./node_modules ./**/node_modules"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/node": "^22.17.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,html,scss}": [
			"prettier --write"
		]
	},
	"engines": {
		"node": ">=20.10.0",
		"pnpm": ">=9.4.0"
	},
	"packageManager": "pnpm@10.12.4"
}
