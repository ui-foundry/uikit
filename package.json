{
    "name": "uikit",
    "description": "uifoundry Design System",
    "license": "Apache-2.0",
    "private": true,
    "repository": {
        "type": "Git",
        "url": "https://github.com/ui-foundry/uikit"
    },
    "scripts": {
        "prepare": "husky",
        "pre-commit": "lint-staged",
        "format": "prettier --write . --cache",
        "lint": "eslint . --cache",
        "lint:branch-name": "chmod 755 .husky/branch-name.sh && sh .husky/branch-name.sh",
        "lint:staged": "lint-staged --verbose",
        "start:uikit": "pnpm --filter @uifoundry/uikit run start",
        "build": "pnpm --filter=./packages/* build",
        "version-packages": "pnpm changeset version",
        "docs:deploy": "pnpm --filter docs build && gh-pages -d docs/dist",
        "clean": "run-s clean:*",
        "clean:build": "pnpm dlx rimraf .stencil dist",
        "clean:modules": "pnpm dlx rimraf ./node_modules ./**/node_modules ./packages/**/node_modules ./examples/**/node_modules"
    },
    "dependencies": {
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.5",
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@stencil/core": "^4.36.1",
        "@stencil/react-output-target": "^1.2.0",
        "@types/node": "^24.0.15",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "eslint": "^9.31.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "gh-pages": "^6.3.0",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jsonc-eslint-parser": "^2.4.0",
        "lefthook": "^1.11.14",
        "lint-staged": "^16.1.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "typescript": "5.8.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,html,scss}": [
            "prettier --write",
            "eslint --cache --fix"
        ]
    },
    "engines": {
        "node": ">=20.10.0",
        "pnpm": ">=9.4.0"
    },
    "packageManager": "pnpm@10.12.3"
}
