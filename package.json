{
	"name": "@uifoundry/uikit",
	"description": "uifoundry is a official design system of",
	"version": "1.0.1-beta.1",
	"license": "MIT",
	"workspaces": [
		"examples/*",
		"packages/*",
		"docs"
	],
	"scripts": {
		"dev:uikit": "pnpm --filter @uifoundry/uikit start",
		"build:uikit": "pnpm --filter @uifoundry/uikit build",
		"build:react": "pnpm --filter @uifoundry/uikit-react build",
		"build": "pnpm run build:uikit && pnpm run build:react",
		"publish": "pnpm run build && pnpm --filter @uifoundry/uikit run publish",
		"clean": "./scripts/clean.sh",
		"start:doc": "pnpm --filter docs start",
		"format": "biome format --write .",
		"prepare": "lefthook install"
	},
	"dependencies": {
		"@stencil/core": "^4.35.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@uifoundry/linters": "^0.1.5",
		"lefthook": "^1.11.14",
		"mkdirp": "^3.0.1",
		"rimraf": "^6.0.1",
		"typescript": "5.8.3"
	},
	"engines": {
		"node": ">=20"
	}
}
